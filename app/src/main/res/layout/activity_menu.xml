<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A6DCFF"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/mainMenu1"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginTop="480dp"
        android:text="Book_Make"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mainMenu2"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginTop="72dp"
        android:text="Book_serching"
        app:layout_constraintStart_toStartOf="@+id/mainMenu1"
        app:layout_constraintTop_toBottomOf="@+id/mainMenu1" />

    <Button
        android:id="@+id/mainMenu3"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginTop="72dp"
        android:text="Book_Shelf"
        app:layout_constraintStart_toStartOf="@+id/mainMenu2"
        app:layout_constraintTop_toBottomOf="@+id/mainMenu2" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="153dp"
        android:layout_height="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114"
        app:srcCompat="@drawable/camera6" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="230dp"
        android:layout_height="59dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="@+id/img1"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/img1"
        app:layout_constraintTop_toTopOf="@+id/img1"
        app:srcCompat="@drawable/img3433" />

</androidx.constraintlayout.widget.ConstraintLayout>