<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AudioRecorder">

    <Button
        android:id="@+id/oPlaying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OnPlaying"
        app:layout_constraintBottom_toBottomOf="@+id/oChack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/oChack" />

    <Button
        android:id="@+id/oChack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="chackpoint"
        app:layout_constraintEnd_toStartOf="@+id/oPlaying"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/oRecord"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/oRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onRecord"
        app:layout_constraintBottom_toBottomOf="@+id/oChack"
        app:layout_constraintEnd_toStartOf="@+id/oChack"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="410dp"
        android:layout_height="461dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>